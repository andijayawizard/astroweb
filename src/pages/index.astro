---
// import SiteLayout from '../layouts/SiteLayout.astro'
import ArticlesList from '../components/ArticlesList.astro';
import User from '../components/User.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
const title='Welcome to Astro Blog'
const desc='this is where you begin'
---
<BaseLayout title={title}>
    <p class="p-2 md:p-4">{desc}</p>
    <div class="">
        <div class="px-4 py-4 bg-blue-100 rounded">image slider</div>
        <div class="px-4 py-4 bg-blue-200 rounded">
            <p>about us</p>
            <a href="/about-us">more about us</a>
        </div>
        <div class="px-4 py-4 bg-blue-300">
            <h1>products</h1>
            <p>our qualified products</p>
            <a href="/products">more products</a>
        </div>
        <div class="px-4 py-4 bg-blue-400">
            <h1>Blog</h1>
            <p>read our blog</p>
            <div class="flex">
                <ArticlesList />
            </div>
            <a href="/blog">read more</a>
        </div>
        <User />
    </div>
</BaseLayout>
